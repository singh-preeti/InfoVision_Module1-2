package com.day12;

public class BubbleSortExample {
	public static void bubblesort(int[] arr) {
		int n = arr.length;
		
		boolean swapped;
		
		for(int i = 0;i< n-1;i++) {
			swapped = false;
			
			for(int j = 0;j < n - i -1; i++) {
				if(arr[j] > arr[j+1]) {
					//swap
					int temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
					
					swapped = true;
				}
			}
		}
	}

}
